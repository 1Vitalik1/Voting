<Page x:Class="Voting.pages.votesResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Voting.pages"
      mc:Ignorable="d" 
      d:DesignHeight="630" d:DesignWidth="1280"
      Title="votesResultPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="statistic" Margin="20" FontSize="30" Foreground="White"  Background="Transparent" BorderThickness="0">
           
        </ListBox>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="back" Grid.Column="3" Margin="5" FontSize="20" Click="back_Click">Назад</Button>
            <Button x:Name="setFile" Grid.Column="2" Margin="5" FontSize="20" Click="setFile_Click">Сделать отчёт</Button>
            <Button x:Name="clear" Grid.Column="1" Margin="5" FontSize="20" Click="clear_Click">Очистить</Button>
        </Grid>
    </Grid>
</Page>
